{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "snippets": {
      "type": "object",
      "description": "[auto-script] compile multipart dotfile into ./build",
      "properties": {
        "generate_file": {
          "type": "string",
          "description": "compile target file name"
        },
        "pattern": {
          "type": "string",
          "description": "regex filter"
        },
        "postfix_inject": {
          "type": "object",
          "description": "[auto-script] inject a load statement in target dotfile",
          "properties": {
            "source": {
              "type": "string",
              "description": "absolute source dotfile path"
            },
            "template": {
              "type": "string",
              "description": "{} is placeholder"
            },
            "target": {
              "type": "string",
              "description": "build name as load target"
            }
          },
          "required": [
            "source",
            "template",
            "target"
          ]
        }
      },
      "required": [
        "generate_file"
      ]
    },
    "options": {
      "type": "object",
      "description": "metadata options"
    }
  }
}
